{
  "manifest_version": 3,
  "name": "X Bookmark Resurfacer",
  "version": "1.0.0",
  "description": "Automatically resurface your X/Twitter bookmarks in your feed as reminders",

  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],

  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["content/early-injector.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": [
        "utils/constants.js",
        "utils/helpers.js",
        "content/bookmark-fetcher.js",
        "content/post-injector.js",
        "content/content-script.js"
      ],
      "css": ["styles/resurfaced.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content/api-interceptor.js"],
      "matches": ["*://x.com/*", "*://twitter.com/*"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "X Bookmark Resurfacer"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
